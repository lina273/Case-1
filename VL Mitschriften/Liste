#Ausgaben Schleife: 

my_list = [1,2,3]

for index, number in enumerate(my_list):
    print(number)
    if number == 3:
        print("Found it!")
        print(f"the index is {index}")
        break #Abbruch, gefunden 
    print ("Gehe weiter")


